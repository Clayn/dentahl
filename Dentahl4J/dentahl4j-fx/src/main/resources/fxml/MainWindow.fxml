<BorderPane fx:id="root" styleClass="background" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.bplaced.clayn.d4j.fx.MainWindowController">
    <center>
